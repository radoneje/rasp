extends layout


block content
        style body{overflow: inherit}
        div(id="app" style="opacity:0" v-bind:style="{opacity:opacity}" )
                div(class="menu")
                        div(class="menuItem" v-for="item in menu" v-bind:class="{active:item.isActive}" @click="menuClick(item)") {{item.title}}

                div(class="sect"  v-if="menu[0].isActive")
                        div(class="sectTitle") {{menu[0].title}}
                        include elements/room
                div(class="sect"  v-if="menu[1].isActive")
                        div(class="sectTitle") {{menu[1].title}}
                        include elements/prog
                div(class="sect"  v-if="menu[2].isActive")
                        div(class="sectTitle") {{menu[2].title}}
                        include elements/video
                div(class="sect"  v-if="menu[3].isActive")
                        div(class="sectTitle") {{menu[3].title}}
                        include elements/rundown
                div(class="sect"  v-if="menu[4].isActive")
                        div(class="sectTitle") {{menu[4].title}}
                        include elements/stb

        script(src="/javascripts/moment.min.js")
        script(src="/javascripts/axios.js")
        script(src="/javascripts/vue.js")
        script(src="/javascripts/vuejs-datepicker.js")
        script(src="/javascripts/datapicker-ru.js")
        <!-- import CSS -->
        <link rel="stylesheet" href="https://unpkg.com/element-ui/lib/theme-chalk/index.css">
        <!-- import JavaScript -->
        <script src="https://unpkg.com/element-ui/lib/index.js"></script>

        script(src="/javascripts/adminScript.js")